<extension name="System Tweaks" desc="Configurable System Tweaks" deps="" core="1" icon="/Extensions/Manuel/Admin/assets/icons/cog_edit.png">

	<class name="Extensions_Manuel_Admin_Controller_User">
		<hooks>
			<item>Admin_Controller_User</item>
		</hooks>
	</class>

	<class name="Extensions_Manuel_Controller_Comment">
		<hooks>
			<item>Controller_Comment</item>
		</hooks>
	</class>

	<files>
		<file>/Extensions/Manuel/Admin/Controller/mail.txt</file>
		<file>/Extensions/Manuel/Admin/Controller/User.php</file>
	</files>

	<settings>
		<adminUser label="Admin/User/add" type="group">
			<sendAddNotification type="checkbox" label="Send notification email to new users when their accounts are created?">1</sendAddNotification>
		</adminUser>
	</settings>

</extension>